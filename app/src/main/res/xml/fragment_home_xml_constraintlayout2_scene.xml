<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:id="@+id/ownerName"
            android:visibility="invisible" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/ownerName"
            motion:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtTitle1"
            android:layout_marginStart="25dp"
            android:visibility="invisible" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintTop_toTopOf="@id/txtTitle1"
            android:layout_marginRight="25dp"
            android:id="@+id/btnsearch"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="25dp"
            android:visibility="invisible" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="120dp"
            motion:layout_constraintTop_toBottomOf="@id/txtTitle1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:id="@+id/image_slider"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:visibility="invisible" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/image_slider"
            android:layout_marginLeft="30dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:id="@+id/txtpopularm"
            android:layout_marginStart="30dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            motion:layout_constraintTop_toBottomOf="@id/txtpopularm"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:id="@+id/moviesRecyclerView"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/txtinfo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/ownerName"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/txtinfo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/moviesRecyclerView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp" />
        <Constraint
            android:id="@+id/txtPopularM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/image_slider"
            android:layout_marginLeft="30dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:visibility="invisible" />
    </ConstraintSet>
</MotionScene>